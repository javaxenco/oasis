# Oasis Garden Care - Environment Variables Template
# Copy this file to .env for local development

# ============================================
# DATABASE
# ============================================
# For local development:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/oasis?schema=public"

# For Railway (production):
# DATABASE_URL will be automatically provided by Railway PostgreSQL addon

# ============================================
# API CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a secure random string for production
JWT_SECRET="change-this-to-a-secure-random-string-in-production"

# ============================================
# CORS ORIGINS
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:4200,https://your-vercel-domain.vercel.app"

# ============================================
# STRIPE PAYMENT (Optional - for future use)
# ============================================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
